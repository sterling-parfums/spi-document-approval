generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?
  approvals Approval[]
  requests  Request[]
}

model Approval {
  id         Int             @id @default(autoincrement())
  approver   User            @relation(fields: [approverId], references: [id])
  approverId Int
  request    Request         @relation("RequestApprovals", fields: [requestId], references: [id])
  requestId  Int
  decision   DECISION_STATUS @default(PENDING)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  deletedAt  DateTime?
}

model Request {
  id          Int        @id @default(autoincrement())
  requester   User       @relation(fields: [requesterId], references: [id])
  requesterId Int
  supplier    String
  amount      Decimal    @db.Decimal(10, 2)
  date        DateTime
  files       File[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?
  approvals   Approval[] @relation("RequestApprovals")
}

model File {
  id        Int       @id @default(autoincrement())
  url       String
  name      String
  request   Request   @relation(fields: [requestId], references: [id])
  requestId Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum DECISION_STATUS {
  APPROVED
  REJECTED
  PENDING
}
